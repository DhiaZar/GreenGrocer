<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.HBox?>

<VBox fx:controller="controller.SignUpController" xmlns:fx="http://javafx.com/fxml" alignment="center" spacing="10" style="-fx-padding: 0 0 20 0;">
    <TextField fx:id="newUsernameField" promptText="New Username" styleClass="text-field"/>
    <PasswordField fx:id="newPasswordField" promptText="New Password" styleClass="password-field"/>
    <TextField fx:id="roleField" promptText="Role (admin/buyer)" styleClass="text-field"/>
    <Region VBox.vgrow="ALWAYS"/> <!-- Spacer to push buttons down -->
    <HBox alignment="center" spacing="10">
        <Button text="Register" onAction="#register" styleClass="button"/>
        <Button text="Go Back" onAction="#goBack" styleClass="button"/>
    </HBox>
</VBox>