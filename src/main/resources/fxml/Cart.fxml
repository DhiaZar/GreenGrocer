<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox fx:controller="controller.CartController" xmlns:fx="http://javafx.com/fxml" alignment="center" spacing="10">
    <Label text="Shopping Cart" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <VBox fx:id="cartContainer" spacing="5"/>
    <Label fx:id="totalLabel" style="-fx-font-size: 14px;"/>
    <Button text="Clear Cart" onAction="#clearCart" styleClass="clear-cart-button"/>
    <Button text="Go Back" onAction="#goBack" styleClass="button"/> <!-- Added Go Back -->
</VBox>